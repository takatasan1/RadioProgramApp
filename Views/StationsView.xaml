<UserControl
    x:Class="RadioProgramApp.Views.StationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:RadioProgramApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RadioProgramApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:RadioProgramApp.ViewModels"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewmodels:StationsViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.RowSpan="2"
            Panel.ZIndex="1"
            Background="#AA000000"
            IsHitTestVisible="True"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="150"
                    Height="20"
                    IsIndeterminate="True" />
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="14"
                    Foreground="White"
                    Text="放送局を読み込み中..." />
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="0"
            Margin="10"
            IsEnabled="{Binding IsContentLoaded}"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                FontSize="14"
                Text="地域を選択:" />
            <ComboBox
                Height="28"
                MinWidth="200"
                VerticalContentAlignment="Center"
                FontSize="14"
                ItemsSource="{Binding AvailableRegions}"
                SelectedItem="{Binding SelectedRegionName}" />
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Padding="5"
            HorizontalScrollBarVisibility="Disabled"
            IsEnabled="{Binding IsContentLoaded}"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding RegionGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:RegionGroupViewModel}">
                        <StackPanel Margin="0,0,0,15">
                            <Border
                                Margin="0,0,0,5"
                                Padding="8,5"
                                Background="#FFE0E0E0"
                                CornerRadius="3">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#FF333333"
                                    Text="{Binding RegionName}" />
                            </Border>
                            <ItemsControl ItemsSource="{Binding Stations}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type viewmodels:StationViewModel}">
                                        <Border
                                            Width="Auto"
                                            Height="180"
                                            Margin="5"
                                            Padding="8"
                                            BorderBrush="DarkGray"
                                            BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.2*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="0.3*" />
                                                </Grid.ColumnDefinitions>

                                                <Image
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    Source="{Binding BannerImageSource}"
                                                    Stretch="Uniform" />

                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Top">
                                                    <TextBlock
                                                        Margin="0,0,0,2"
                                                        FontSize="24"
                                                        FontWeight="Bold"
                                                        Text="{Binding Name}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,0,0,2"
                                                        FontSize="22"
                                                        FontWeight="SemiBold"
                                                        Foreground="DarkBlue"
                                                        Text="{Binding CurrentProgramTitle}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,0,0,2"
                                                        FontSize="20"
                                                        Foreground="Black"
                                                        Text="{Binding CurrentProgramPerformer}" />
                                                    <TextBlock
                                                        FontSize="20"
                                                        Foreground="Black"
                                                        Text="{Binding CurrentProgramTimeRange}" />
                                                    <ScrollViewer
                                                        MaxHeight="48"
                                                        Margin="0,2,0,0"
                                                        HorizontalScrollBarVisibility="Disabled"
                                                        IsEnabled="True"
                                                        VerticalScrollBarVisibility="Auto">
                                                        <TextBlock
                                                            x:Name="ProgramInfoTextBlock"
                                                            FontSize="12"
                                                            Foreground="DarkSlateGray"
                                                            Text="{Binding CurrentProgramInfoText}"
                                                            TextWrapping="Wrap" />
                                                    </ScrollViewer>
                                                </StackPanel>
                                                <Image
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    Source="{Binding CurrentProgramImageSource}"
                                                    Stretch="Uniform" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
